html
  body
    if first_name
      h1 Welcome back, #{first_name} #{last_name}.
      p I bet your favorite color is #{favorite_color}!
    else
      h1 Welcome, stranger! Tell us about yourself.
      form(method="POST" action="/")
        .input
          input(name="first_name" placeholder="First Name")
        .input
          input(name="last_name" placeholder="Last Name")
        .input
          input(name="favorite_color" placeholder="Favorite Color")
        .input
          input(type="submit" value="That's me!")
